{
    "compilerOptions": {
        "allowJs": false,
        "resolveJsonModule": true,
        "target": "es2019",
        "module": "commonjs",
        "strict": true,
        "noImplicitAny": false,
        "types": [
            "node",
            "@wdio/globals/types",
            "@wdio/mocha-framework",
            "expect-webdriverio",
            "@wdio/appium-service"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}
{
    "compilerOptions": {
        "allowJs": false,
        "resolveJsonModule": true,
        "target": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": false,
        "types": [
            "node",
            "@wdio/globals/types",
            "@wdio/mocha-framework",
            "@wdio/cucumber-framework",
            "expect-webdriverio"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}